{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System.Net.Http.HttpClient": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "logs/log-.txt",
          "rollingInterval": "Day",
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext:l}: {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext:l}: {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  },
  "AllowedHosts": "*",
  "InputSelectNotificationEntities": [
    {
      "InputSelectEntityId": "input_select.living_room_panel_notifications"
    },
    {
      "InputSelectEntityId": "input_select.jane_notifications",
      "InputNumberEntityId": "input_number.jane_notification_count"
    },
    {
      "InputSelectEntityId": "input_select.jasper_notifications",
      "InputNumberEntityId": "input_number.jasper_notification_count"
    }
  ]
}
